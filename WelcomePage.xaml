<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:weather_app"
             x:Class="weather_app.WelcomePage"
             Title="WelcomePage"
             BackgroundColor="AliceBlue">
       <StackLayout VerticalOptions="Center"
                    Margin="20"
                    Spacing="0">
              <Image Source="icon_02d"
                     HeightRequest="200"
                     WidthRequest="200"/>
              <Label Text="Weather"
                     FontSize="40"
                     TextColor="#ffca28"/>
              <Label Text="Forecase App"
                     FontSize="40"
                     TextColor="#ffca28"/>
              <Label Text="This app will provide you the most realistic weather data"
                     FontSize="Small"
                     TextColor="LightYellow"/>
              <Button Text="Get Started"
                      FontSize="Large"
                      BackgroundColor="#ffca28"
                      WidthRequest="250"
                      Margin="0,50,0,0"
                      x:Name="ButtonGetStarted"
                      Clicked="ButtonGetStarted_Clicked"/>
       </StackLayout>
</ContentPage>